<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".ui.activity.SettleActivity">

        <TextView
            android:id="@+id/t1"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="54dp"
            android:layout_marginLeft="30dp"
            android:textSize="16sp"
            android:text="完善信息"
            android:textColor="#3087ea"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        </TextView>

        <TextView
            android:id="@+id/t2"
            app:layout_constraintTop_toBottomOf="@id/t1"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="10sp"
            android:layout_marginLeft="30dp"
            android:textSize="16sp"
            android:text="审核通过即可成功入驻"
            android:textColor="#3087ea"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        </TextView>

        <com.wd.doctor.customview.MyEditText
            android:id="@+id/editEmil"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="48dp"
            app:layout_constraintTop_toBottomOf="@id/t2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </com.wd.doctor.customview.MyEditText>

        <com.wd.doctor.customview.MyEditText
            android:id="@+id/editCode"
            android:layout_marginLeft="30dp"
            app:layout_constraintTop_toBottomOf="@id/editEmil"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </com.wd.doctor.customview.MyEditText>

        <com.wd.doctor.customview.MyEditText
            android:id="@+id/editPwd_1"
            android:layout_marginLeft="30dp"
            app:layout_constraintTop_toBottomOf="@id/editCode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </com.wd.doctor.customview.MyEditText>

        <com.wd.doctor.customview.MyEditText
            android:id="@+id/editPwd_2"
            android:layout_marginLeft="30dp"
            app:layout_constraintTop_toBottomOf="@id/editPwd_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </com.wd.doctor.customview.MyEditText>

        <com.wd.doctor.customview.MySpring
            android:visibility="gone"
            android:id="@+id/mySpring_1"
            android:layout_marginLeft="30dp"
            app:layout_constraintTop_toBottomOf="@id/editCode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </com.wd.doctor.customview.MySpring>

        <com.wd.doctor.customview.MySpring
            android:visibility="gone"
            android:id="@+id/mySpring_2"
            android:layout_marginLeft="30dp"
            app:layout_constraintTop_toBottomOf="@id/mySpring_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </com.wd.doctor.customview.MySpring>

        <Button
            android:id="@+id/tvNext"
            android:background="@drawable/buttom"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="30dp"
            android:text="下一步"
            android:textSize="16sp"
            android:textColor="#ffffff"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_width="300dp"
            android:layout_height="36dp">

        </Button>


        <TextView
            android:id="@+id/getCode"
            android:textColor="#999999"
            android:textSize="14sp"
            app:layout_constraintTop_toBottomOf="@id/editCode"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginRight="30dp"
            android:text="获取验证码"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        </TextView>



</androidx.constraintlayout.widget.ConstraintLayout>