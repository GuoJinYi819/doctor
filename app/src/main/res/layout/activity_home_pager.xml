<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="#ffffff"
    android:layout_height="match_parent">
    <ScrollView
        android:scrollbars="none"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <RelativeLayout
                android:padding="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textColor="#1E90FF"
                    android:textSize="16sp"
                    android:text="主要业务"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                </TextView>
                <ImageView
                    android:layout_alignParentRight="true"
                    android:src="@mipmap/common_nav_message_black_n"
                    android:layout_width="22dp"
                    android:layout_height="22dp">

                </ImageView>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/relativeWen"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:layout_width="match_parent"
                android:layout_height="180dp">

                <ImageView
                    android:layout_marginRight="3dp"
                    android:src="@mipmap/inquiry_bg"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                </ImageView>

                <com.wd.doctor.customview.LabelView
                    android:id="@+id/labelView_1"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginBottom="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                </com.wd.doctor.customview.LabelView>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/relativeConsultation"
                android:layout_marginTop="10dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:layout_width="match_parent"
                android:layout_height="180dp">

                <ImageView
                    android:layout_marginRight="3dp"
                    android:src="@mipmap/promise_bg"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                </ImageView>

                <com.wd.doctor.customview.LabelView
                    android:id="@+id/labelView_2"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginBottom="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                </com.wd.doctor.customview.LabelView>

            </RelativeLayout>
            <RelativeLayout
                android:padding="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textColor="#1E90FF"
                    android:textSize="16sp"
                    android:text="我的信息"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                </TextView>
            </RelativeLayout>

            <RelativeLayout
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:layout_width="match_parent"
                android:layout_height="180dp">

                <ImageView
                    android:layout_marginRight="3dp"
                    android:src="@mipmap/my_information_bg"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                </ImageView>

                <ImageView
                    android:id="@+id/imagePic"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="20dp"
                    android:scaleType="fitXY"
                    android:src="@mipmap/ic_launcher"
                    android:layout_width="120dp"
                    android:layout_height="140dp">

                </ImageView>

                <TextView
                    android:id="@+id/tvName"
                    android:text="曾小贤"
                    android:maxLines="5"
                    android:textSize="16sp"
                    android:singleLine="true"
                    android:textColor="#000"
                    android:layout_toRightOf="@id/imagePic"
                    android:layout_marginTop="34dp"
                    android:layout_marginLeft="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                </TextView>

                <TextView
                    android:id="@+id/tvInauguralHospital"
                    android:text="曹操军营000"
                    android:singleLine="true"
                    android:maxLines="10"
                    android:textSize="14sp"
                    android:textColor="#444"
                    android:layout_toRightOf="@id/imagePic"
                    android:layout_below="@id/tvName"
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                </TextView>
                <TextView
                    android:id="@+id/tvJobTitle"
                    android:text="曹操军营"
                    android:textSize="14sp"
                    android:singleLine="true"
                    android:maxLines="10"
                    android:textColor="#444"
                    android:layout_toRightOf="@id/imagePic"
                    android:layout_below="@id/tvInauguralHospital"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                </TextView>
                <TextView
                    android:id="@+id/departmentName"
                    android:text="曹操军营"
                    android:textSize="14sp"
                    android:singleLine="true"
                    android:maxLines="10"
                    android:textColor="#444"
                    android:layout_toRightOf="@id/imagePic"
                    android:layout_below="@id/tvJobTitle"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                </TextView>
                <com.wd.doctor.customview.LabelView
                    android:id="@+id/labelView_3"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginBottom="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                </com.wd.doctor.customview.LabelView>

            </RelativeLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>